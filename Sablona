\newcommand\chord[2][l]{ % akordy
  \makebox[0pt][#1]{\textbf{\begin{tabular}[b]{@{}l@{}}#2\\\mbox{}\end{tabular}}}}

\def\everypar{\parindent=0cm} % zrušení odsazování odstavců

\begin{document}
\begin{LARGE}

\hspace{1cm}

\begin{flushleft}
	\section*{\Huge NÁZEV PÍSNIČKY}
	\emph{Interpret}
\end{flushleft}

\chord{C}Skákal \chord{E}pes přes o\chord{Ami}ves \\
přes zelenou \chord{F}louku, \\
šel za \chord{C}ním \chord{E}mysli\chord{F}vec \\
\chord{G}péro na klo\chord{C}bouku \chord{G}\\
\\
$\textregistered$:
\emph{
\chord{C\textsuperscript{7}}Pejsku \chord{E\textsuperscript{7}}náš, co dě\chord{Ami\textsuperscript{7}}láš, \\
žes tak vesel \chord{F\textsuperscript{7}}stále, \\
řek' bych \chord{C\textsuperscript{7}}vám, \chord{E\textsuperscript{7}}nevím \chord{F\textsuperscript{7}}sám, \\
\chord{G\textsuperscript{7}}hop a skákal \chord{C\textsuperscript{7}}dále.\\
}

